    "@types/morgan": "^1.9.10",
    "@types/multer": "^1.4.7",
    "@types/node": "^20.11.30",
    "@types/nodemailer": "^7.0.9",
    "@types/supertest": "^6.0.3",
    "prisma": "^6.0.1",
    "supertest": "^7.1.4",
    "ts-node": "^10.9.2",
    "tsx": "^4.17.0",

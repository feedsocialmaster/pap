    "date-fns": "^4.1.0",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "express-rate-limit": "^8.2.1",
    "helmet": "^7.1.0",
    "isomorphic-dompurify": "^2.35.0",
    "jsonwebtoken": "^9.0.2",
    "mercadopago": "^2.2.16",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
